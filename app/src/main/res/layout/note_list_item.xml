<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <it.gmariotti.cardslib.library.view.CardViewNative
        android:id="@+id/noteCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/colorBorder"
            android:layout_width="5dp"
            android:layout_height="@dimen/card_base_empty_height"
            android:background="@drawable/rectangle" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Use same ID to use built-in features -->
            <TextView
                android:id="@+id/card_main_inner_simple_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/untitled_note"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/card_main_inner_simple_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_main_inner_simple_title"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/empty_note"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
