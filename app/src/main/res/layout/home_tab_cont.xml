<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/circle_green"
        android:onClick="goToNoteEditFragment"
        android:padding="5dp"
        android:textSize="14sp"
        android:text="@string/type_notes"
        android:textColor="#fff"
        android:id="@+id/button3"
        android:elevation="0dp"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/circle_blue"
        android:onClick="goToNoteListActivity"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="@string/my_notes"
        android:textColor="#fff"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_red"
        android:drawableTop="@drawable/microphone"
        android:onClick="goToVoiceActivity"
        android:padding="20dp"
        android:text="@string/record_notes"
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>